{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "downlevelIteration": true,
      "experimentalDecorators": true,
      "moduleResolution": "bundler",
      "importHelpers": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2022",
      "module": "es2022",
      "lib": [
        "es2022",
        "dom"
      ],
      "useDefineForClassFields": false
    }
}
